COCO_NAME = COCO

COCO_ROOT_URL = http://images.cocodataset.org
COCO_IMAGES_TRAIN_ZIP = train2017.zip
COCO_IMAGES_VAL_ZIP = val2017.zip
COCO_ANNOTATIONS_ZIP = annotations_trainval2017.zip

COCO_IMAGES_TRAIN_URL = $(COCO_ROOT_URL)/zips/$(COCO_IMAGES_TRAIN_ZIP)
COCO_IMAGES_VAL_URL = $(COCO_ROOT_URL)/zips/$(COCO_IMAGES_VAL_ZIP)
COCO_ANNOTATIONS_URL = $(COCO_ROOT_URL)/annotations/$(COCO_ANNOTATIONS_ZIP)

COCO_TRAIN_ANNOTATIONS = captions_train2017.json
COCO_VAL_ANNOTATIONS = captions_val2017.json

COCO_ROOT_DIR = $(DATA_DIR)/$(COCO_NAME)

